{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Installer",
            "program": "${workspaceFolder}/sample/minecraft-modpack-installer",
            "windows": {
                "program": "${workspaceFolder}/sample/minecraft-modpack-installer.exe"
            },
            "cwd": "${workspaceFolder}/sample",
            "preLaunchTask": "prepare debug",
            "env": {
                "WEBVIEW2_ADDITIONAL_BROWSER_ARGUMENTS": "--remote-debugging-port=1422"
            }
        },
        {
            "name": "Attach to WebView",
            "port": 1422,
            "request": "attach",
            "timeout": 300000,
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug Installer",
            "configurations": [
                "Launch Installer",
                "Attach to WebView"
            ]
        }
    ]
}
